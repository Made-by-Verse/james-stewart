{% style %}
  .color-{{ section.settings.color_scheme }} {
    --color-primary: {{ section.settings.color_scheme.settings.primary }};
    --color-contrast: {{ section.settings.color_scheme.settings.contrast }};
    --color-accent: {{ section.settings.color_scheme.settings.accent }};
  }
{% endstyle %}

<div class="py-12">
  {% if section.settings.text != blank %}
    <div class="lg:ml-24 max-w-lg">
      {{ section.settings.text }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Paragraph",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Paragraph Section"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text content",
      "default": "<p>Share information about your brand with your customers.</p>"
    },
    {
      "type": "checkbox",
      "id": "padding",
      "label": "Add section padding",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Paragraph",
      "category": "Text"
    }
  ]
}
{% endschema %}