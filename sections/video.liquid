{% style %}
  [data-video-container] {
    opacity: 1;
    will-change: transform;
  }
  
  [data-video-button],
  [data-video-frame] {
    transform: scale(0.3);
    will-change: transform;
  }
{% endstyle %}

<div class="wrapper py-6 lg:py-12 relative">
  <div class='relative'>
    {%- unless section.settings.heading == blank -%}
        <h2 class='absolute top-0 left-0 font-sans'>{{ section.settings.heading }}</h2>
    {%- endunless -%}
   
  </div>
  <div 
    class="wrapper wrapper--small" 
  >
    {% if section.settings.text != blank %}
      <div class='max-w-p mb-12'>{{ section.settings.text }}</div>
    {% endif %}
    <div class='relative' data-video-container>
      <button
        id="video-play-button"
        aria-label="{{ alt }}"
        class="w-full aspect-video absolute inset-0 flex items-center justify-center transform transition-transform duration-500 z-10"
        data-video-button
      >
      {%- if section.settings.cover_image != blank -%}
        {% render 'responsive-image', image: section.settings.cover_image, width: 1100, height: 600, wrapper_class: 'w-full aspect-video relative', image_class: 'object-cover absolute inset-0 w-full h-full' %}
      {%- else -%}
        {{ 'hero-apparel-3' | placeholder_svg_tag: '' }}
      {%- endif -%}
      <span class='sr-only'>Play Video</span>
      <svg class='absolute' width="94" height="94" viewBox="0 0 94 94" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="47.0016" cy="46.9977" r="46.4" fill="#FAF8EC"/>
        <path d="M59.002 45.3973L42.202 55.0967L42.202 35.6978L59.002 45.3973Z" fill="#A39B91"/>
      </svg>
    </button>
    {%- if section.settings.video == null and section.settings.video_url != null -%}
      {%- if section.settings.video_url.type == 'youtube' -%}
        <iframe
          data-video-frame
          src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1"
          allow="autoplay; encrypted-media"
          allowfullscreen
          title="{{ section.settings.description | escape }}"
          class="w-full aspect-video transform transition-transform duration-500"
        ></iframe>
      {%- else -%}
        <iframe
          src="https://player.vimeo.com/video/{{ video_id }}"
          allow="autoplay; encrypted-media"
          allowfullscreen
          title="{{ section.settings.description | escape }}"
          class="w-full aspect-video"
        ></iframe>
      {%- endif -%}
    {%- else -%}
      <div data-video-frame>
        {{
          section.settings.video
          | video_tag:
            image_size: '1100x',
            autoplay: false,
            loop: section.settings.enable_video_looping,
            controls: true,
            muted: false
        }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.video.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "t:sections.video.settings.heading.default",
      "label": "t:sections.video.settings.heading.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share information about your brand with your customers.</p>"
    },
    {
      "type": "video",
      "id": "video",
      "label": "t:sections.video.settings.video.label"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube", "vimeo"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video.settings.video_url.label",
      "info": "t:sections.video.settings.video_url.info"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video.settings.cover_image.label"
    },
  ],
  "presets": [
    {
      "name": "t:sections.video.presets.name"
    }
  ]
}
{% endschema %}
