<div class="group relative">
  <a href="{{ product.url }}" class="block">
    {% if product.featured_image %}
      {% render 'responsive-image', image: product.featured_image, width: 400, height: 400, image_class: 'absolute inset-0 w-full h-full object-cover', wrapper_class: 'relative aspect-landscape overflow-hidden' %}
    {% else %}
      {{ 'product-1' | placeholder_svg_tag: 'absolute inset-0 w-full h-full object-cover bg-gray-100' }}
    {% endif %}
    <div class="px-5 py-2.5 gap-4 flex justify-between items-start">
      <h3 class="flex-1">{{ product.title }}</h3>
      <span class="">
        {% if product.price_varies %}
          From {{ product.price_min | money_without_trailing_zeros }}
        {% else %}
          {{ product.price | money_without_trailing_zeros }}
        {% endif %}
      </span>
    </div>
  </a>
</div>
