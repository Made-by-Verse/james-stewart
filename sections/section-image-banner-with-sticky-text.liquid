<div class='w-full h-screen relative text-white'>
  {% render 'responsive-image', image: section.settings.image, wrapper_class: 'absolute h-full w-full inset-0 object-cover', image_class: 'object-cover' %}
  <div class='wrapper flex items-start h-full pb-4'>
    <div class='sticky top-16 w-full'>
      {% assign words = section.settings.title | split: ' ' %}
      <div class='h1 flex w-full justify-between'>
      {% for word in words %}
        <span>{{ word }}</span>
      {% endfor %}
      </div>
      <div class='max-w-p mb-4'>
        {{ section.settings.richtext }}
      </div>
      {% if section.settings.button_text != blank %}
        <a href='{{ section.settings.button_link }}' class='btn btn--outline-contrast inline-flex'>{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Sticky Text Image Banner",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "Rich Text"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}

