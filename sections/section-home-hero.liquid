{% style %}
  .color-{{ section.settings.color_scheme }} {
    --color-primary: {{ section.settings.color_scheme.settings.primary }};
    --color-contrast: {{ section.settings.color_scheme.settings.contrast }};
    --color-accent: {{ section.settings.color_scheme.settings.accent }};
  }
{% endstyle %}

<div class="h-screen w-full relative flex items-end justify-center p-6 lg:p-12 home-hero">
  <div class="absolute inset-0 hero-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {% render 'responsive-image', image: block.settings.image, image_class: "w-screen h-screen object-cover" %}
        </div>
      {% endfor %}
    </div>
  </div>
  {% if section.settings.show_logo %}
    <div class="absolute top-1/3 left-1/2 -translate-x-1/2 text-white z-[2]">
      {% render "logo" %}
    </div>
  {% endif %}
  <div class="flex flex-col items-center space-y-4 text-white max-w-md relative z-[1]">
    {% if section.settings.hero_content != blank %}
      <div class="text-center">{{ section.settings.hero_content }}</div>
    {% endif %}
    {% if section.settings.hero_button_url != blank %}
      <a href="{{ section.settings.hero_button_url }}" class="btn btn--outline-contrast">{{ section.settings.hero_button_text }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Home Hero",
  "blocks": [
    {
      "type": "image_block",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "richtext",
      "id": "hero_content",
      "label": "Hero Content"
    },
    {
      "type": "url",
      "id": "hero_button_url",
      "label": "Hero Button URL"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Hero Button Text"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Show Logo",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Home Hero"
    }
  ]
}
{% endschema %}
