{% style %}
    .color-{{ section.settings.color_scheme }} {
    --color-primary: {{ section.settings.color_scheme.settings.primary }};
    --color-contrast: {{ section.settings.color_scheme.settings.contrast }};
    --color-accent: {{ section.settings.color_scheme.settings.accent }};
  }
{% endstyle %}

<footer class="color-{{ section.settings.color_scheme }} bg-primary">
  <div class="wrapper grid lg:grid-cols-6 pt-12 gap-4 mb-24">
    <ul class="space-y-1 lg:col-span-3 text-[24px] leading-none">
      {% for link in linklists.footer-menu-1-v2-0.links %}
        <li class="">
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
    <ul class="space-y-1 leading-none text-base">
      {% for link in linklists.footer-menu-2-v2-0.links %}
        <li class="">
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
      <ul class="space-y-1 leading-none text-base">
      {% for link in linklists.footer-menu-3-v2-0.links %}
        <li class="">
          <a href="{{ link.url }}" class="">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
    <ul class="space-y-1 leading-none text-base col-start-4">
      {%- if settings.social_twitter_link != blank -%}
        <li>
          <a href="{{ settings.social_twitter_link }}" class="">Twitter</a>
        </li>
      {%- endif -%}
      {%- if settings.social_facebook_link != blank -%}
        <li>
          <a href="{{ settings.social_facebook_link }}" class="">Facebook</a>
        </li>
      {%- endif -%}
      {%- if settings.social_instagram_link != blank -%}
        <li>
          <a href="{{ settings.social_instagram_link }}" class="">Instagram</a>
        </li>
      {%- else -%}
        <li>
          <a href="" class="">Instagram Isn't here</a>
        </li>
      {%- endif -%}
      {%- if settings.social_tiktok_link != blank -%}
        <li>
          <a href="{{ settings.social_tiktok_link }}" class="">TikTok</a>
        </li>
      {%- endif -%}
      {%- if settings.social_pinterest_link != blank -%}
        <li>
          <a href="{{ settings.social_pinterest_link }}" class="">Pinterest</a>
        </li>
      {%- endif -%}
      {%- if settings.social_youtube_link != blank -%}
        <li>
          <a href="{{ settings.social_youtube_link }}" class="">YouTube</a>
        </li>
      {%- endif -%}
    </ul>
  </div>
  <div class="wrapper font-sans">
    <div class="flex justify-between border-t border-contrast py-2">
      <p>Â© {{ 'now' | date: '%Y' }} James Stewart</p>
      <p>Site by <a href="https://www.joshuabrown.com.au" target="_blank">Joshua Brown</a></p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
}
{% endschema %}
