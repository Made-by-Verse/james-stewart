{% style %}
  .color-{{ section.settings.color_scheme }} {
    --color-primary: {{ section.settings.color_scheme.settings.primary }};
    --color-contrast: {{ section.settings.color_scheme.settings.contrast }};
    --color-lines: {{ section.settings.color_scheme.settings.lines }};
  }
{% endstyle %}

<div class="wrapper grid lg:grid-cols-2 gap-8 py-6 lg:py-12 color-{{ section.settings.color_scheme }} bg-primary text-contrast">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image_block' %}
        {% if block.settings.image %}
          <div class="relative overflow-hidden bg-white {% if block.settings.aspect_ratio == 'portrait' %}aspect-portrait{% elsif block.settings.aspect_ratio == 'landscape' %}aspect-landscape{% else %}aspect-square{% endif %}">
            {% render 'responsive-image' with
            image: block.settings.image,
            wrapper_class: "",
            image_class: "absolute inset-0 object-cover w-full h-full",
            size: '1000x1000',
            width: 1000,
            height: 1000, %}
          </div>
        {% endif %}
      {% when 'text_block' %}
        {% if block.settings.sticky_text or block.settings.static_text %}
          <div class="flex flex-col gap-8">
            {% if block.settings.sticky_text %}
              <div class="relative flex-1">
                <div class="sticky top-20 max-w-p lead">{{ block.settings.sticky_text }}</div>
              </div>
            {% endif %}
            {% if block.settings.static_text %}
              <div class="max-w-p">{{ block.settings.static_text }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% when 'text_beside' %}
        <div class="flex w-full h-full items-center">
          <div class="grid md:grid-cols-3 gap-4">
            <h3 class="h3">{{ block.settings.heading }}</h3>
            <div class="md:col-span-2">
              <div class="max-w-p richtext">
                {{ block.settings.text }}
              </div>
              <div class="flex mt-4">
                {% if block.settings.button_text %}
                  <a href="{{ block.settings.button_link }}" class="btn btn--outline-primary flex">{{ block.settings.button_text }}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% when 'stockist_cta' %}
        {% render 'stockist-cta' with block: block %}
      {% when 'wholesale_cta' %}
        {% render 'wholesale-cta' with block: block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Two Column Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Two Column Content",
      "category": "Custom"
    }
  ],
  "blocks": [
    {
      "type": "image_block",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "Aspect Ratio",
          "options": [
            { "value": "portrait", "label": "Portrait" },
            { "value": "landscape", "label": "Landscape" },
            { "value": "square", "label": "Square" }
          ]
        }
      ]
    },
    {
      "type": "text_block",
      "name": "Text Between",
      "settings": [
        {
          "type": "richtext",
          "id": "sticky_text",
          "label": "Sticky Text"
        },
        {
          "type": "richtext",
          "id": "static_text",
          "label": "Static Text"
        }
      ]
    },
    {
      "type": "text_beside",
      "name": "Text Beside",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "stockist_cta",
      "name": "Stockist CTA",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "drawer_button_text",
          "label": "Drawer Button Text"
        },
        {
          "type": "text",
          "id": "drawer_heading",
          "label": "Drawer Heading"
        }
      ]
    },
    {
      "type": "wholesale_cta",
      "name": "Wholesale CTA",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_1_text",
          "label": "Button 1 Text"
        },
        {
          "type": "text",
          "id": "button_1_link",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button_2_text",
          "label": "Button 2 Text"
        }
      ]
    }
  ],
  "max_blocks": 2
}
{% endschema %}
