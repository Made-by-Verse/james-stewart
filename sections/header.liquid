<header id="js-header" class="fixed bg-primary w-full z-50 h-16 font-sans">
  <div class="wrapper h-full grid lg:grid-cols-3 gap-4">
    <nav class="h-full">
      <ul class="flex gap-4 h-full items-center">
        {%- for link in linklists.revamped-menu.links -%}
          <li class="">
            <a href="{{ link.url }}" class="link">
              {{ link.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
    <div class=" flex justify-center items-center">
      <a href="{{ routes.root_url }}" class="{% if template == 'index' %}home-page-logo{% endif %}">
        {% render 'header-logo' %}
      </a>
    </div>
    <div class="h-full flex items-center justify-end">
      <button 
        x-data
        @click="$dispatch('toggle-cart-drawer')"
        class="link"
        type="button"
      >
        cart
      </button>
    </div>
  </div>

  <!-- Add the cart drawer markup -->
  <div
    x-data="{ open: false }"
    @toggle-cart-drawer.window="open = !open"
    @keydown.escape.window="open = false"
  >
    <!-- Backdrop -->
    <div 
      x-show="open"
      class="fixed inset-0 bg-black bg-opacity-50"
      @click="open = false"
    ></div>

    <!-- Drawer -->
    <div
      x-show="open"
      x-transition:enter="transform transition ease-in-out duration-500"
      x-transition:enter-start="translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transform transition ease-in-out duration-500"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="translate-x-full"
      class="fixed right-0 top-0 h-full w-96 bg-primary text-contrast shadow-lg"
      role="dialog"
      aria-modal="true"
    >
      <div class="p-4 h-full">
        <div class="flex justify-between items-center">
          <h2 class="link">Cart</h2>
          <button @click="open = false" class="">&times;</button>
        </div>
        <div class="mt-24 h-full flex flex-col justify-between w-full">
          {% render 'cart-drawer' %}
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
}
{% endschema %}
