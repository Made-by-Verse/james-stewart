
  <div class="wrapper py-6 lg:py-12">
    <div class="flex justify-between items-center py-4 border-t border-lines">
      {% if section.settings.title != blank %}
        <h2 class="">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.button_text != blank %}
        <a href="{{ routes.collections_url }}" class="btn btn--outline-dark">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection != blank %}
          {% render 'collection-tile', collection: collection %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collections Grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    }
  ],
  "blocks": [
    {
      "type": "collection_block",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collections Grid",
      "blocks": [
        {
          "type": "collection_block"
        },
        {
          "type": "collection_block"
        },
        {
          "type": "collection_block"
        }
      ]
    }
  ]
}
{% endschema %}
